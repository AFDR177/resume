<main>
    <div style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">{{category}}</a></li>
            <li class="breadcrumb-item active" aria-current="page">MacBook</li>
        </ol>

    </div>
    <h1>{{name}} <span class="badge bg-secondary">{{price}}</span></h1>
    {{> descr}}
    {{!-- <div>Description: <em>{{description}}</em></div> --}}
    <div>
        <ul>
            {{#with features}}
            {{> title big=true data='Features'}}
            <li>
                <div>
                    {{#with processor}}
                    {{> title_wish smoll=true data='processor:'}}
                    {{brand}}, {{model}}, {{speed}}, core: {{cores}}, {{cache}}
                    {{/with}}
                </div>
            </li>
            <br>
            <li>
                <div>
                    {{#with memory}}
                    {{> title_wish smoll=true data='memory:'}}
                    {{type}}, {{size}}, {{speed}}
                    {{/with}}
                </div>
            </li>
            <br>
            <li>
                <div>
                    {{#with storage}}
                    {{> title_wish smoll=true data='storage:'}}
                    {{type}}, {{size}}
                    {{/with}}
                </div>
            </li>
            <br>
            <li>
                <div>
                    {{#with display}}
                    {{> title_wish smoll=true data='display:'}}
                    {{size}}, {{resolution}}, {{technology}}, {{color_space}}, {{brightness}}, {{refresh_rate}},
                    {{/with}}
                </div>
            </li>
            <br>
            <li>
                <div>
                    {{#with graphics}}
                    {{> title_wish smoll=true data='graphics:'}}
                    {{brand}}, {{model}}, {{memory}}
                    {{/with}}
                </div>
            </li>
            <br>
            <li>
                <div>

                    {{> title_wish smoll=true data='ports:'}}
                    <ul>
                        {{#with ports.[0]}}
                        <li><u>Port 1:</u><br>
                            Type:{{type}},<br>
                            Count{{count}}, <br>
                            Features:
                            {{#each features}}
                            {{this}},
                            {{/each}}
                        </li>
                        {{/with}}
                        <br>
                        {{#with ports.[1]}}
                        <li><u>Port 2:</u><br>
                            Type:{{type}},<br>
                            Count{{count}}, <br>
                        </li>
                        {{/with}}
                    </ul>
                </div>
            </li>
            <br>
            <li>
                <div>
                    {{#with battery}}
                    {{> title_wish smoll=true data='battery:'}}
                    {{type}}, {{capacity}}, {{life}}
                    {{/with}}
                </div>
            </li>
            <br>
            <li>
                <div>
                    {{> title_wish smoll=true data='weight:'}}
                    {{weight}}
                </div>
            </li>
            <br>
            <li>
                <div>
                    {{#with dimensions}}
                    {{> title_wish smoll=true data='dimensions:'}}
                    {{height}}, {{width}}, {{depth}}
                    {{/with}}
                </div>
            </li>
            <br>
            <li>
                <div>
                    {{> title_wish smoll=true data='operating_system:'}}
                    {{operating_system}}
                </div>
            </li>
            <br>
            <li>
                <div>

                    {{> title_wish smoll=true data='accessories:'}}
                    <ul>
                        {{#each accessories}}
                        <li>
                            <u>Name:</u> {{name}}<br>
                            <u>Price:</u> {{price}}<br>
                        </li>
                        <br>
                        {{/each}}
                    </ul>
                </div>
            </li>
            {{/with}}
        </ul>
    </div>

</main>