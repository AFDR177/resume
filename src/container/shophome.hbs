<main class="py-3 px-5">
    <div class="row">
        {{!-- BLOCK 1 - navigation in layout --}}

        {{!-- BLOCK 2 - newsBlock --}}
        {{#with newsBlock}}
        <div class="mt-5 md-3">
            <h2 class="text-center">{{title}}</h2>
        </div>

        {{#each cards}}
        <div class="col-3 my-3">
            <div class="card text-bg-light">
                <div class="card-header text-bg-dark">
                    {{title}}
                    {{#if isTop}}
                    <span class="badge text-bg-danger rounded-pill text-capitalize">
                        Топ
                    </span>{{/if}}
                    {{#if idNew}}
                    <span class="badge text-bg-success rounded-pill text-capitalize">
                        Нова
                    </span>
                    {{/if}}
                </div>
                <hr class="my-0">
                <div class="text-bg-dark px-2">
                    <p class="card-title">{{description}}</p>
                </div>
            </div>
        </div>
        {{/each}}
        {{/with}}

        <hr class="mt-5">

        {{!-- BLOCK 3-goodsBlock --}}

        {{#with goodsBlock}}
        <div class="col-12 my-5">

            <div class="nav nav-tabs">
                {{#each tabs}}
                <div class="nav-item">
                    {{#if isActive}}
                    <a class="nav-link active">{{text}}</a>
                    {{else}}
                    <div>
                        {{#if isDisabled}}
                        <a class="nav-link text-secondary">{{text}}</a>
                        {{else}}
                        <a class="nav-link">{{text}}</a>
                        {{/if}}
                    </div>
                    {{/if}}
                </div>
                {{/each}}
            </div>
        </div>
        {{#each cards}}
        <div class="col-4 my-3">
            <div class="card">
                <img class="card-img-top" src={{image}} alt={{title}}>
                <div class="card-body">
                    <h5 class="card-title">{{title}}
                        {{#if isHot}}
                        <span class="badge text-bg-warning rounded-pill text-uppercase">
                            Hot
                        </span>{{/if}}
                        {{#if idNew}}
                        <span class="badge text-bg-primary rounded-pill text-capitalize">
                            Нове
                        </span>
                        {{/if}}
                    </h5>
                    <p>{{description}}</p>
                </div>
            </div>
        </div>
        {{/each}}
        {{/with}}

        <hr class="my-5">

        {{!-- BLOCK 4-subscribe --}}
        {{> shopsubscribe }}

        <hr class="my-5">

        {{!-- BLOCK 5-service --}}
        <div class="card text-bg-success">
            <div class="card-body">
                <div class="nav">
                    <div class="col-12 py-1">
                        {{#with service}}
                        <div>
                            <h2 class="text-center">{{title}}</h2>
                            <p class="text-center">{{description}}</p>
                            {{#with buttons.[0]}}
                            <div class="text-center">
                                <button href={{link}} class="btn btn-primary text-center">{{text}}</button>
                            </div>
                            {{/with}}
                        </div>
                        {{/with}}
                    </div>

                </div>
            </div>
        </div>

        <hr class="my-5">

        {{!-- BLOCK 6-footer --}}


        {{#each footer}}
        <div class="col-2">
            <div class="nav flex-column">
                {{!-- {{#each footer.[0]}} --}}
                {{#with [0]}}
                <div class="nav-item">
                    <a href={{link}} class="nav-link active">{{text}}</a>
                </div>
                {{/with}}
                {{#with [1]}}
                <div class="nav-item">
                    <a href={{link}} class="nav-link active">{{text}}</a>
                </div>
                {{/with}}
                {{#with [2]}}
                <div class="nav-item">
                    <a href={{link}} class="nav-link active">{{text}}</a>
                </div>
                {{/with}}
                {{#with [3]}}
                <div class="nav-item">
                    <a href={{link}} class="nav-link disabled">{{text}}</a>
                </div>
                {{/with}}
            </div>
        </div>
        {{/each}}
        {{!-- {{/each}} --}}







    </div>








</main>