<main>
    <div class="row">
        <div class="col-12">
            {{#with person}}
            <p>
            <h1>{{name}}</h1>
            </p>
            <div class="my-1">{{age}} years </div>

            <div>{{gender}}</div>
            {{#with address}}

            <div>{{country}}, {{zip}}, {{state}}, {{city}}, {{street}}</div>
            {{/with}}

            <hr>

            <div class="my-3">
                <p>{{> title data='My Education' big=true}}</p>
                <ul>
                    {{#each education}}
                    <li>
                        {{degree}}, {{major}}, {{university}}, {{graduationYear}}
                    </li>
                    {{/each}}
                </ul>

            </div>
            <hr>

            <section class="my-3">
                <p>{{> title data='My Workexperience' big=true}}</p>
                <ul class="my-2">
                    {{#each workExperience}}
                    <li class="my-2">
                        {{> title data=company big=false}}
                        <div class="mt-2"><strong>{{title}}</strong></div>
                        <em class="">{{startDate}} - {{endDate}}</em>

                        <div class="mt-2">
                            {{> title_wish data='Responsibilities:' smoll=true}}
                        </div>
                        <ul>
                            {{#each responsibilities}}
                            <li>{{this}}</li>
                            {{/each}}
                        </ul>
                        <div class="my-3">
                            {{> title data='Information about the company:' big=false}}
                        </div>
                        <ul>
                            <li class="mt-2">Year founded: {{year_founded}}</li>
                            <li class="">Industry: {{industry}}</li>
                            <li class="my-3">{{> title_wish data='Employees:' smoll=true}}
                                <ul>
                                    {{#each employees}}
                                    <li>{{> title_wish data=name smoll=true}}
                                        {{position}};
                                        {{department}};
                                        <div class="mt-3">
                                            {{> title_wish data='Projects:' smoll=false}}
                                        </div>
                                        <ol>
                                            {{#each projects}}

                                            <li>{{> title_wish data=name smoll=false}}

                                                <em>{{description}}</em>
                                                <em>Status: {{status}}</em>
                                                <div class="mt-3">
                                                    {{> title_wish data='Teams:' smoll=false}}
                                                </div>
                                                <ul>
                                                    {{#each teams}}
                                                    <li>{{team_name}}</li>
                                                    <div class="mt-2">
                                                        {{> title_wish data='Team Leader:' smoll=false}}
                                                    </div>
                                                    {{#with team_leader}}
                                                    {{name}} |
                                                    {{title}} |
                                                    {{email}}
                                                    {{/with}}
                                                    <div class="mt-3">
                                                        {{> title_wish data='Team members:'
                                                        smoll=false}}
                                                    </div>
                                                    <ul>
                                                        {{#each team_members}}
                                                        <li>{{> title_wish data=name smoll=false}}</li>

                                                        {{title}} | {{email}}
                                                        <div class="mt-3">
                                                            {{> title_wish data='Skills:' smoll=false}}
                                                        </div>
                                                        <ul>
                                                            {{#each skills}}
                                                            <li>{{this}}</li>
                                                            {{/each}}
                                                        </ul>

                                                        <div class="mt-3">
                                                            {{> title_wish data='Projects:' smoll=false}}
                                                        </div>
                                                        <ol>
                                                            {{#each projects}}
                                                            <li>{{name}}</li>

                                                            <em>{{description}}</em>
                                                            <div class="mt-3">
                                                                {{> title_wish data='technologies:' smoll=false}}
                                                            </div>
                                                            <ul>
                                                                {{#each technologies}}
                                                                <li>{{this}}</li>
                                                                {{/each}}
                                                            </ul>
                                                            <div class="mt-3">
                                                                {{> title_wish data='Team members:' smoll=false}}
                                                            </div>
                                                            <ul>
                                                                {{#each team_members}}
                                                                <li>
                                                                    <div>{{name}};</div>
                                                                    <div>{{title}}</div>
                                                                </li>
                                                                {{/each}}
                                                            </ul>

                                                            {{/each}}
                                                        </ol>
                                            </li>

                                            {{/each}}
                                </ul>

                        </ul>


                    </li>


                    {{/each}}


                </ul>
                {{/each}}
                </ol>

                </li>
                </ul>
                </li>
                <br>









                {{/each}}
                </ul>
                </li>


                </ul>






                </li>

                </li>





                {{/each}}
                </ul>

            </section>



            {{/with}}
        </div>
    </div>

</main>