{{!-- {{#each goodsBlock}} --}}

<div class="card my-3">
    <div class="row">
        {{!-- картинка --}}
        <div class="col-2 my-1">
            <img class="card-img-top" src={{image}} alt={{name}}>
        </div>

        {{!-- название и описание --}}
        <div class="col-4 py-2">
            {{> title big=false data=name}}
            <p>{{description}}</p>
        </div>

        {{!-- цена --}}
        <div class="col-2 my-4">
            {{#with price}}
            <p>{{title}}:</p>
            {{value}}
            {{/with}}
        </div>

        {{!-- количество --}}
        <div class="col-2 my-5">
            <p>{{amount}}</p>
        </div>

        {{!-- кнопки --}}
        <div class="col-2 my-4">
            {{#each buttons}}
            {{#if isPrimary}}
            <button class="btn btn-primary mb-3">{{text}}</button>
            {{/if}}
            {{#if isDanger}}
            <button class="btn btn-outline-danger">{{text}}</button>
            {{/if}}
            {{/each}}
        </div>

    </div>
</div>

{{!-- {{/each}} --}}