<div class="col-4">
    <p>{{number}}</p>
    <h5>{{status}}</h5>
</div>

<div class="col-2">
    {{#with amount}}
    <p>{{title}}</p>
    <h5>{{value}}</h5>
    {{/with}}
</div>

<div class="col-4">

    <div class="row">
        {{#each images}}
        <div class="col-4">
            <img class="card-img-top mx-2" src={{this}} alt="foto">
        </div>
        {{/each}}
    </div>

</div>

<div class="col-2">
    {{#with button}}
    {{#if isPrimary}}
    <button src={{link}} class="btn btn-primary mx-2 my-3">{{text}}</button>
    {{/if}}
    {{/with}}
</div>
<hr class="my-2">