<ol class="breadcrumb">
    {{#each breadcrumb}}
    {{#if url}}
    <li class="breadcrumb-item">
        <a href={{url}} class="active">{{name}}</a>
    </li>
    {{else}}
    <li class="breadcrumb-item">
        <span class="text-secondary">{{name}}</span>
    </li>
    {{/if}}
    {{/each}}
</ol>