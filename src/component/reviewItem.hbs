{{#each reviewList}}
<div class="card my-5">
    <div class="card m-3">

        <div class="card-header">
            <div class="row">
                {{#with title}}
                <div class="col-10 pt-2">
                    <h5>{{userName}}</h5>
                    <p>{{caption}}</p>
                </div>
                <div class="col-2 mt-4">{{date}}</div>
                {{/with}}
            </div>
        </div>

        <div class="card-body">
            {{#with reviewBody}}
            {{#with seller}}
            <p>{{title}}: {{value}}</p>
            {{/with}}

            {{#with rating}}
            <p>{{title}}: {{value}}</p>
            {{/with}}

            {{#each text}}
            {{this}}
            {{/each}}

            <div class="my-3">
                {{#with advantages}}
                <p><b>{{title}}:</b> {{text}}</p>
                {{/with}}
            </div>

            <div>
                {{#with disadvantages}}
                <p><b>{{title}}:</b> {{text}}</p>
                {{/with}}
            </div>

            <div>
                {{#each images}}
                <img class="card-img-top m-2" src={{this}} alt="product foto">
                {{/each}}
            </div>

        </div>
    </div>

    {{#each coments}}
    <div class="card my-3 ms-5 me-3 px-3">
        <div class="row">
            <div class="col-10 pt-3">
                <h5>{{userName}}</h5>
            </div>
            <div class="col-2 mt-4">{{date}}</div>
            <p class="my-2">{{text}}</p>
        </div>
    </div>
    {{/each}}

    {{/with}}

</div>
{{/each}}