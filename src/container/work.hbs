{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}




<main>
    <div class="row">
        <div class="col-12">
            {{#with main}}
            {{> title data='Work history' big=true}}
            <div>
                <ul>
                    {{#each works}}
                    <li>
                        <div class="my-1">{{position}}</div>
                        <div>
                            {{duration.from}} -
                            {{#if duration.to}}
                            {{duration.to}}
                            {{else}}
                            (досі працюємо)
                            {{/if}}
                        </div>

                        <div class="my-3">
                            {{#if company.url}}
                            {{> link text=company.name href=company.url blank=true noLine=true}}
                            {{else}}
                            <b>{{company.name}}</b>
                            {{/if}}
                        </div>
                        <div class="my-2">
                            <strong>Projects ({{projectAmount}})</strong>
                        </div>

                        <ul class="my-3">
                            {{#each projects}}
                            <li>
                                <div>
                                    {{> link text=name href=url blank=true noLine=true}}

                                    <p>{{about}}</p>
                                </div>
                            </li>
                            <li class="my-3" style="color:rgb(12, 3, 66)">Project stacks ({{stackAmount}})</li>

                            <ul class="my-2">
                                {{#each stacks}}
                                <li>{{name}}</li>
                                {{/each}}


                                <li class="mt-3" style="color:rgb(12, 3, 66)">Project awards {{stackAwards}}</li>
                                <ul class="my-1">
                                    {{#each awards}}
                                    <li>{{name}}</li>
                                    {{/each}}
                                </ul>
                            </ul>
                            {{/each}}
                        </ul>
                    </li>

                    {{/each}}
                </ul>
            </div>

            {{/with}}
        </div>
    </div>
</main>