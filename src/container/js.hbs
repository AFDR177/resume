<main>
    <h1>{{name}} <span class="badge bg-secondary">JS</span></h1>

    <em>{{description}} </em>
    <br>
    <hr>
    <div>
        <p>
            {{> title big=false data='History'}}
            {{#with history}}
            <b>Year:</b> {{year}}
            <br>
            <b>Founder:</b> {{founder}}
            {{/with}}
        </p>

        <div>
            {{> title big=false data='Types'}}
            <ul class="list-group">
                {{#each types}}
                <li class="list-group-item">{{this}}</li>

                {{/each}}
            </ul>
        </div>

        <p>
            {{> title big=false data='Syntax'}}
        <ul>
            {{#with syntax}}
            <li>
                <b>Variables:</b>
                {{#each variables}}
                {{this}},
                {{/each}}
            </li>
            <li>
                <b>Functions:</b>
                {{#each functions}}
                {{this}},
                {{/each}}
            </li>
            <li>
                <b>Conditionals:</b>
                {{#each conditionals}}
                {{this}},
                {{/each}}
            </li>
            <li>
                <b>Loops:</b>
                {{#each loops}}
                {{this}},
                {{/each}}
            </li>
            <li>
                <b>Classes:</b>
                {{#each classes}}
                {{this}}
                {{/each}}.
            </li>
            {{/with}}
        </ul>
        </p>
        <p>
            {{> title big=false data='Features'}}
        <ul>
            {{#each features}}
            <li>{{this}};</li>
            {{/each}}
        </ul>
        </p>
        <p>
            {{> title big=false data='Tools'}}
        <ul>
            {{#each tools}}
            <li>{{this}};</li>
            {{/each}}
        </ul>
        </p>
        <p>
            {{> title big=false data='Community'}}
            <a href="#" class="link-primary">{{community.name}}</a>
        <ul class="hstack gap-3">
            {{#each community}}
            <li>
                <a href="#" class="link-primary">{{name}}</a>
                <br>
                <div class="bg-body-tertiary border">{{type}}</div>
            </li>
            <br>
            {{/each}}
        </ul>
        </p>
    </div>

</main>