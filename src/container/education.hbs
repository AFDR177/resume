<div>
    {{#with main}}
    <main>
        <section>
            <div>
                {{> title big=true data='My educationss'}}
            </div>
            <ul>
                {{#each educations}}
                <li>
                    {{name}}
                    {{#unless isEnd}} (в процесі вивчення) {{/unless}}
                </li>
                {{/each}}
            </ul>
        </section>

        <section>
            <div>
                {{> title big=false data='My certificats'}}
            </div>
            <ul>
                {{#each certificates}}
                <li>
                    {{name}}
                    {{#if isID}} {{id}}
                    {{else}} ({{id}})
                    {{/if}}
                </li>
                {{/each}}
            </ul>
        </section>
    </main>
    {{/with}}
</div>