<main>
    <div class="row p-3">
        <div class="ps-4 mb-5">
            {{> title big=true data=header}}
        </div>

        {{!-- ЛЕВАЯ КОЛОНКА --}}
        <div class="col-8 px-4">
            <div>
                {{#with contacts_data}}
                {{> title big=false data=title}}

                {{!-- Кнопки Я новый покупатель / постоянный --}}

                {{#each buttons}}

                {{#if isPrimary}}
                <button class="btn btn-warning text-light me-3 my-2">{{text}}</button>
                {{/if}}
                {{#if isOutline}}
                <button class="btn btn-outline-warning">{{text}}</button>
                {{/if}}
                {{/each}}

                {{#with form}}
            </div>

            {{!-- Контактні дані --}}

            <div class="row">
                {{#each input}}
                <div class="col-6 my-3">
                    <lable class="form-label">{{label}}</lable>
                    <input class="form-control" placeholder={{placeholder}}>
                    <div class="form-text text-secondary">{{caption}}</div>
                </div>
                {{/each}}
            </div>

            <hr class="my-4">

            {{!-- Перекрлючатель switch --}}
            {{#each switch}}
            <div class="form-check form-switch mb-3">
                <lable class="form-check-lable">{{text}}</lable>
                {{#if isActive}}
                <input type="checkbox" class="form-check-input">
                {{else}}
                <input type="checkbox" class="form-check-input" disabled>
                {{/if}}
            </div>
            {{/each}}

            <hr class="my-4">

            {{/with}}
            {{/with}}

            {{!-- Доставка --}}
            <div>
                {{#with delivery}}
                {{> title big=false data=title}}
                <div class="card p-3 mb-4">
                    <div class="row">
                        {{#each select}}
                        <div class="col-6">
                            <lable class="form-label">{{label}}</lable>
                            <select class="form-select">

                                <option selected class="text-muted">{{placeholder}}</option>
                                {{#each options}}
                                <option value={{value}}>{{text}}</option>
                                {{/each}}
                            </select>
                        </div>
                        {{/each}}
                    </div>
                </div>

                {{!-- список с радиокнопкой --}}
                {{#each delivery_type}}
                <div class="row">
                    <div class="col-6">
                        <div class="form-check">
                            <lable class="form-check-lable">{{type}}</lable>
                            <input name="food" type="radio" class="form-check-input">
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-check">
                            <div class="text-end">{{value}}</div>
                        </div>
                    </div>
                </div>
                {{/each}}

                <hr class="my-4">

                {{!-- ОПЛАТА с радиокнопкой --}}

                <div class="my-4">

                    {{> title big=false data=payment_title}}

                </div>
                {{#each payment}}
                <div class="form-check my-2">
                    <lable class="form-check-lable">{{type}}</lable>
                    <input name="food" type="radio" class="form-check-input">
                </div>
                <div class="form-text text-muted">{{description}}</div>
                {{/each}}

                <hr class="my-4">

                {{!-- Контактні дані отримувача --}}
                {{> title big=false data=contact.title}}
                <div class="row">
                    {{#each contact}}
                    {{#unless @first}}
                    <div class="col-6 my-3">
                        <lable class="form-label">{{label}}</lable>
                        <input class="form-control" placeholder={{placeholder}}>
                        <div class="form-text text-secondary">{{caption}}</div>
                    </div>
                    {{/unless}}
                    {{/each}}
                </div>

                <hr class="my-4">

                {{!-- Коментар --}}
                {{#with coment}}
                <div class="col-12 my-3">
                    <lable class="form-label">{{label}}</lable>
                    <input class="form-control" placeholder="{{placeholder}}">
                </div>
                {{/with}}
                {{/with}}
            </div>

            <hr class="my-4">

            {{!-- КУпоны --}}

            {{#with coupon}}
            {{> title big=false data=title}}

            {{#each select}}
            <lable class="form-label">{{label}}</lable>
            <select {{#if @first}} class="form-select form-select-lg mb-3" {{else}} class="form-select form-select-sm"
                {{/if}}>
                <option selected class="text-muted">{{placeholder}}</option>
                {{#each options}}
                <option value={{value}}>{{text}}</option>
                {{/each}}
            </select>
            {{#unless @first}}
            <div class="form-text text-secondary mb-3">caption</div>
            {{/unless}}
            {{/each}}

            {{#each add}}
            <lable class="form-label mt-3">{{label}}</lable>
            <input {{#if @first}} class="form-control form-control-lg" placeholder="{{placeholder}}" {{else}}
                class="form-control" placeholder="{{placeholder}}" {{/if}}>

            </input>

            <div class="form-text text-secondary mb-3">{{caption}}</div>

            {{/each}}

            {{/with}}

            <hr class="my-4">

            {{!-- Домоможи краще нам тебе зрозуміти --}}
            {{#with quiz}}
            {{> title big=false data=title}}
            {{#with preference}}

            {{!-- Список радиокнопок --}}
            <div class="form-label">{{title}}</div>
            {{#each options}}
            <div class="form-check">
                <lable class="form-check-lable">{{this}}</lable>
                <input name="hiTeh" type="radio" class="form-check-input">
            </div>
            {{/each}}
            {{/with}}


            {{!-- Строка ввода текста --}}
            <div class="my-3">
                {{#with your_expirience}}
                <lable class="form-label">{{label}}</lable>
                <input class="form-control">
                {{/with}}
            </div>

            {{!-- Выпадающий список --}}
            <div class="my-3">
                {{#with purchase_frequency}}
                <lable class="form-label">{{label}}</lable>
                <select class="form-select">
                    <option selected class="text-muted">{{placeholder}}</option>
                    {{#each options}}
                    <option value=value>{{text}}</option>
                    {{/each}}
                </select>
                {{/with}}
            </div>

            {{!-- Список галочки --}}
            <div class="my-3">
                {{#with factors}}
                <div class="form-label">{{title}}</div>
                {{#each options}}
                <div class="form-check">
                    <lable class="form-check-lable">{{this}}</lable>
                    <input name="hiTeh" type="checkbox" class="form-check-input">
                </div>
                {{/each}}
                {{/with}}
            </div>
            {{/with}}
        </div>

        {{!-- ПРАВАЯ КОЛОНКА --}}
        {{!-- Кнопки справа --}}

        <div class="col-4">
            <div class="row">

                <div class="card py-2 my-3">
                    <div class="col-6">
                        {{#each action_block}}
                        {{#if isPrimary}}
                        <button class="btn btn-success text-light">{{text}}</button>
                        {{/if}}
                        {{#if isDanger}}
                        <button class="btn btn-danger my-2 ">{{text}}</button>
                        {{/if}}
                        {{#if isInfo}}
                        <button class="btn btn-info text-light ">{{text}}</button>
                        {{/if}}
                        {{/each}}
                    </div>
                </div>


                {{!-- Total справа --}}

                <div class="card py-2">
                    <div class="col-12">
                        {{#with total}}
                        {{> title big=false data=title}}

                        {{#each item_list}}
                        <div>{{name}}: {{price}}</div>
                        {{/each}}

                        <hr>

                        {{#each additional_info}}
                        <div>{{text}}: {{value}}</div>
                        {{/each}}

                        <hr>

                        {{#with total_price}}
                        <div>{{text}}: {{value}}</div>
                        {{/with}}

                        <hr>
                        {{!-- Кнопки Подтвердить заказ / отменить купон --}}

                        {{#each button}}

                        {{#if isPrimary}}
                        <button class="btn btn-primary text-light me-3 my-2">{{text}}</button>
                        {{/if}}
                        {{#if isOutline}}
                        <button class="btn btn-outline-primary">{{text}}</button>
                        {{/if}}
                        {{/each}}

                        {{/with}}

                    </div>
                </div>


            </div>
        </div>


    </div>
</main>