<div class="row mt-4 ms-5">
    <div class="col-8">
        <h1>{{navigation.Logo}}</h1>
    </div>

    <div class="col-4 mt-2 ps-5">
        <div class="nav">
            {{#with navigation}}
            {{#each links}}
            {{#if href}}
            <div class="nav-item">
                <a href={{href}} target="_blank" class="nav-link active">{{text}}</a>
            </div>
            {{else}}
            <div class="nav-item">
                <a href="#" class="nav-link disabled">{{text}}</a>
            </div>
            {{/if}}
            {{/each}}
            {{/with}}
        </div>
    </div>
</div>